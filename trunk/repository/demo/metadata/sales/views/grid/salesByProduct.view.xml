<view>
	<name>salesByProduct</name>
	<datasource>
		<query>
	    	SELECT {[Measures].[Quantity], [Measures].[SaleAmount]} ON COLUMNS, 
	    	NON EMPTY {[Product].members} on rows
	    	FROM [Sales]
	    	WHERE ${sex}, ${ageRange}, ${paymentMethod}, ${month.parent(year).default([Time].[All].LastChild)} 
		</query>
		<dependencies>
			<filter>sex</filter>
			<filter>ageRange</filter>
			<filter>paymentMethod</filter>
			<filter>year</filter>
			<filter>month</filter>
		</dependencies>
	</datasource>
	<look>
		<lookType>ext.grid</lookType>
		<title>Ventas x Producto</title>
		<height>120</height>
		<fields>Product</fields>
		<fields>Quantity</fields>
		<fields>SaleAmount</fields>
		<columns>
			<header>Producto</header>
			<dataIndex>Product</dataIndex>
			<width>140</width>
		</columns>
		<columns>
			<header>Cantidad</header>
			<dataIndex>Quantity</dataIndex>
			<renderer>intNumber</renderer>
			<align>right</align>
			<width>70</width>
		</columns>
		<columns>
			<header>Venta $</header>
			<dataIndex>SaleAmount</dataIndex>
			<renderer>intNumber</renderer>
			<align>right</align>
			<width>65</width>
		</columns>
	</look>
</view>