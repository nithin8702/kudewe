<view>
	<name>totalCostBySeniorityGraph</name>
	<datasource>
		<query>
	    	SELECT {[Measures].[TotalCost]} ON COLUMNS, 
	    	{
	    		ORDER({[ResourceSeniority].[Seniority].members}, [Measures].[TotalCost], DESC)
	    	} on rows
	    	FROM [ResourceCost]
	    	WHERE ${month.parent(year).default([Time].[All].LastChild)}, ${profile}, ${workingHours}
		</query>
		<dependencies>
			<filter>year</filter>
			<filter>month</filter>
			<filter>profile</filter>
			<filter>workingHours</filter>
		</dependencies>
	</datasource>
	<look>
		<lookType>ext.graph</lookType>
		<title>Costo Total x Seniority</title>
		<height>200</height>
		<width>100</width>
		<legend>
			<position>right</position>
		</legend>
		<theme>Base:gradients</theme>
		<fields>ResourceSeniority</fields>
		<fields>TotalCost</fields>
		<series type="list">
			<type>pie</type>
			<field>TotalCost</field>
			<showInLegend>true</showInLegend>
			<label>
				<field>ResourceSeniority</field>
				<display>rotate</display>
				<contrast>true</contrast>
			</label>
		</series>
	</look>
</view>
