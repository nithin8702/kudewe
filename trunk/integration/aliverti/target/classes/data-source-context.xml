<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">
	
	<bean id="dataSourceAliverti" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="${batch.aliverti.jdbc.driver}" />
		<property name="url" value="${batch.aliverti.jdbc.url}" />
		<property name="username" value="${batch.aliverti.jdbc.user}" />
		<property name="password" value="${batch.aliverti.jdbc.password}" />
	</bean>
	
	<bean id="transactionManagerAliverti" class="org.springframework.jdbc.datasource.DataSourceTransactionManager" lazy-init="true">
		<property name="dataSource" ref="dataSourceAliverti" />
	</bean>

</beans>
