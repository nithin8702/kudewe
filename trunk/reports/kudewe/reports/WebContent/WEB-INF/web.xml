<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Kudewe Reports</display-name>
  <welcome-file-list>
    <welcome-file>menu.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>kudeweReportsServices</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>kudeweReportsServices</servlet-name>
    <url-pattern>/metadata/*</url-pattern>
   	<url-pattern>/olap/*</url-pattern>
   	<url-pattern>/feed/*</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
			classpath:/kudewe/reports/config/context/applicationContext.xml
			classpath:/kudewe/reports/config/context/applicationSecurity.xml
		</param-value>
  </context-param>
  <filter>
    <filter-name>springSecurityFilterChain</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>springSecurityFilterChain</filter-name>
    <url-pattern>/metadata/*</url-pattern>
    <url-pattern>/olap/*</url-pattern>
    <url-pattern>*.html</url-pattern>
    <url-pattern>/</url-pattern>
    <url-pattern>/login.jsp</url-pattern>
    <url-pattern>/login_check</url-pattern>
    <url-pattern>/logout</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>org.springframework.security.ui.session.HttpSessionEventPublisher</listener-class>
  </listener>
</web-app>