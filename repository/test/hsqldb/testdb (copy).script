CREATE SCHEMA PUBLIC AUTHORIZATION DBA
CREATE TEXT TABLE LK_TIME(DATE_ID INTEGER NOT NULL PRIMARY KEY,YEAR INTEGER,QUARTER INTEGER,MONTH INTEGER,MONTH_NAME VARCHAR,WEEK_IN_MONTH INTEGER,DAY_IN_MONTH INTEGER,DAY_NAME VARCHAR)
SET TABLE LK_TIME SOURCE "lk_time.cvs"
CREATE TEXT TABLE LK_PRODUCT(PRODUCT_ID INTEGER NOT NULL PRIMARY KEY,PRODUCT_NAME VARCHAR,BRAND_ID INTEGER,BRAND_NAME VARCHAR)
SET TABLE LK_PRODUCT SOURCE "lk_product.cvs"
CREATE TEXT TABLE FT_SALES(PRODUCT_ID INTEGER,DATE_ID INTEGER,QUANTITY INTEGER,SALE_PESO INTEGER,CONSTRAINT FK_SALES_TIME FOREIGN KEY(DATE_ID) REFERENCES LK_TIME(DATE_ID),CONSTRAINT FK_SALES_PRODUCT FOREIGN KEY(PRODUCT_ID) REFERENCES LK_PRODUCT(PRODUCT_ID))
SET TABLE FT_SALES SOURCE "ft_sales.cvs"
CREATE USER SA PASSWORD ""
GRANT DBA TO SA
SET WRITE_DELAY 10
