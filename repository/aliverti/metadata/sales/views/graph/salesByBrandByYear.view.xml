<view>
	<name>salesByBrandByYear</name>
	<datasource>
		<query>
	    	SELECT {[Measures].[SaleAmount], [Measures].[Profit]} ON COLUMNS, 
	    	NON EMPTY {TopCount(ORDER({[ProductBrand].[All].Children}, ([Measures].[Profit]) , DESC), 10)} on rows
	    	FROM [Sales]
	    	WHERE (${categoryLevel3.parent(categoryLevel2).parent(categoryLevel1)}, ${product}, ${month.parent(year).default([Time].[All].LastChild)}, ${use}, ${saleType}) 
		</query>
		<dependencies>
			<filter>categoryLevel1</filter>
			<filter>categoryLevel2</filter>
			<filter>categoryLevel3</filter>
			<filter>product</filter>
			<filter>year</filter>
			<filter>month</filter>
			<filter>use</filter>
			<filter>saleType</filter>
		</dependencies>
	</datasource>
	<look>
		<lookType>ext.graph</lookType>
		<title>Ventas x Marca (Top 10)</title>
		<height>200</height>
		<xtype>linechart</xtype>
		<xField>ProductBrand</xField>
		<fields>ProductBrand</fields>
		<fields>Quantity</fields>
		<fields>SaleAmount</fields>
		<fields>Profit</fields>
		<series>
			<type>column</type>
			<displayName>Monto Venta</displayName>
			<yField>SaleAmount</yField>
		</series>
		<series>
			<type>line</type>
			<displayName>Ganancia</displayName>
			<yField>Profit</yField>
		</series>
	</look>
</view>